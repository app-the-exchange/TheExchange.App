<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.theexchange.presentation.ui.category.CategoryActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_category"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/Toolbar.TitleText"
            android:background="@color/blue_the_exchange"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.v7.widget.AppCompatImageView
            android:scaleType="centerCrop"
            android:src="@drawable/banner_category_1"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_category"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/banner_category_1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"/>

    <android.support.v7.widget.CardView
            app:layout_constraintTop_toBottomOf="@+id/banner_category_1"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/card_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5sp"
            android:layout_margin="10dp"
            app:cardElevation="5dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/title_category"
                    android:textColor="@color/title_activty_category"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:textSize="16sp"
                    android:text="1. Guinness Storehouse"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/description_category"
                    android:textColor="@color/description_category"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:text="A exposição de vários andares da Cervejaria Guinness oferece uma visão fascinante sobre a história e produção da famosa cerveja preta. E sim, os visitantes recebem um copo de cerveja no final!"
                    android:layout_below="@+id/title_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
